<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECG Analysis Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .diagnosis-header {
            border-left: 5px solid;
            padding-left: 15px;
        }
        .critical { border-color: #dc3545; }
        .warning { border-color: #ffc107; }
        .normal { border-color: #28a745; }
        .probability-bar {
            height: 24px;
            border-radius: 4px;
        }
        .ecg-container {
            position: relative;
            overflow: hidden;
            height: 300px;
            background-color: #f8f9fa;
        }
        .ecg-image {
            transition: transform 0.3s;
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
        .zoom-controls {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h5 mb-0">Electrocardiogram Analysis Report</h1>
                    <span class="badge bg-light text-dark">v1.0</span>
                </div>
            </div>
            
            <div class="card-body">
                <!-- Основной диагноз -->
                <div class="mb-4">
                    <h2 class="h5 diagnosis-header <%= result.main_diagnosis.includes('Sinus') ? 'normal' : result.main_diagnosis.includes('Dangerous') ? 'critical' : 'warning' %>">
                        Primary Diagnosis
                    </h2>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <h3 class="h4 mb-0"><%= result.main_diagnosis.replace(/_/g, ' ') %></h3>
                        <span class="badge <%= result.confidence > 0.7 ? 'bg-success' : result.confidence > 0.5 ? 'bg-warning' : 'bg-danger' %>">
                            Confidence: <%= (result.confidence * 100).toFixed(1) %>%
                        </span>
                    </div>
                </div>

                <!-- График ЭКГ и вероятности -->
                <div class="row g-3 mb-4">
                    <div class="col-lg-6">
                        <div class="card h-100">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <h3 class="h6 mb-0">ECG Waveform</h3>
                                <div>
                                    <button class="btn btn-sm btn-outline-secondary" id="zoomIn">+</button>
                                    <button class="btn btn-sm btn-outline-secondary" id="zoomOut">-</button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="ecg-container">
                                    <img src="<%= result.ecg_image_url %>" alt="ECG Signal" 
                                         class="ecg-image" id="ecgImage">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-6">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h3 class="h6 mb-0">Diagnostic Probabilities</h3>
                            </div>
                            <div class="card-body">
                                <canvas id="probChart" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Таблица вероятностей -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h3 class="h6 mb-0">Detailed Probability Distribution</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead>
                                    <tr class="table-light">
                                        <th>Condition</th>
                                        <th style="width: 40%">Probability</th>
                                        <th>Level</th>
                                    </tr>
                                </thead>
                                <tbody id="probTableBody">
                                    <% Object.entries(result.predictions).forEach(([condition, prob]) => { 
                                        const probPercent = (prob * 100).toFixed(1);
                                        let interpretation, badgeClass;
                                        
                                        if (prob > 0.7) {
                                            interpretation = "High";
                                            badgeClass = "danger";
                                        } else if (prob > 0.3) {
                                            interpretation = "Moderate";
                                            badgeClass = "warning";
                                        } else {
                                            interpretation = "Low";
                                            badgeClass = "success";
                                        }
                                    %>
                                        <tr>
                                            <td><%= condition.replace(/_/g, ' ') %></td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar bg-<%= badgeClass %>" 
                                                         style="width: <%= probPercent %>%">
                                                        <%= probPercent %>%
                                                    </div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-<%= badgeClass %>"><%= interpretation %></span></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Клинические рекомендации -->
                <div class="card border-<%= result.main_diagnosis.includes('Sinus') ? 'success' : 'danger' %>">
                    <div class="card-header bg-<%= result.main_diagnosis.includes('Sinus') ? 'success' : 'danger' %> text-white">
                        <h3 class="h6 mb-0">Clinical Recommendations</h3>
                    </div>
                    <div class="card-body">
                        <% if (result.main_diagnosis.includes('Sinus')) { %>
                            <p class="mb-0">Normal sinus rhythm detected. Routine follow-up recommended.</p>
                        <% } else { %>
                            <div class="alert alert-danger mb-0">
                                <strong>Clinical attention required:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Consult a cardiologist</li>
                                    <li>Consider additional diagnostic tests</li>
                                    <% if (result.main_diagnosis.includes('Dangerous') || result.main_diagnosis.includes('Threatening')) { %>
                                        <li class="fw-bold">Urgent evaluation recommended</li>
                                    <% } %>
                                </ul>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div class="card-footer text-muted small">
                Report generated: <span id="reportDate"></span> | 
                Analysis set: <%= result.set_name %>
            </div>
        </div>
    </div>

    <script>
        // Инициализация данных
        const resultData = {
            main_diagnosis: "<%= result.main_diagnosis %>",
            confidence: <%= result.confidence %>,
            ecg_image_url: "<%= result.ecg_image_url %>",
            predictions: <%- JSON.stringify(result.predictions || result.predictions) %>
        };

        // Форматирование даты
        document.getElementById('reportDate').textContent = new Date().toLocaleString();

        // Инициализация графика
        const ctx = document.getElementById('probChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: Object.keys(resultData.predictions).map(c => c.replace(/_/g, ' ')),
                datasets: [{
                    label: 'Probability (%)',
                    data: Object.values(resultData.predictions).map(p => (p * 100).toFixed(1)),
                    backgroundColor: [
                        '#dc3545', '#fd7e14', '#ffc107', '#20c997', '#0d6efd', '#6f42c1'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: ctx => `${ctx.dataset.label}: ${ctx.raw}%`
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: { stepSize: 20 },
                        title: { display: true, text: 'Probability (%)' }
                    }
                }
            }
        });

        // Управление масштабом ЭКГ
        let scale = 1;
        const ecgImg = document.getElementById('ecgImage');
        document.getElementById('zoomIn').addEventListener('click', () => {
            scale += 0.1;
            ecgImg.style.transform = `scale(${scale})`;
        });
        document.getElementById('zoomOut').addEventListener('click', () => {
            if (scale > 0.5) {
                scale -= 0.1;
                ecgImg.style.transform = `scale(${scale})`;
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>